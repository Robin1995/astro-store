---
interface Props {
  totalPages: number;
}
const { totalPages } = Astro.props;

const url = Astro.url;
const page = url.searchParams.get("page") ?? 1;

const currentPage = Math.max(+page > totalPages ? totalPages : +page, 1);

const path = url.pathname;
---

<div class="flex justify-between my-32">
  <a class="button" href=`${path}?page=${Math.max(currentPage -1, 1)}`
    >Anteriores</a
  >

  <span>Pagina {currentPage} de {totalPages}</span>

  <a class="button" href=`${path}?page=${Math.min(currentPage +1, totalPages)}`
    >Siguientes</a
  >
</div>

<style>
  @reference "tailwindcss";
  .button {
    @apply p-2 bg-blue-500 text-white rounded;
  }
</style>
